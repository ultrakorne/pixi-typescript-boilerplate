{
    "name": "pixi-typescript-boilerplate",
    "version": "2.3.0",
    "description": "pixi.js typescript boilerplate",
    "scripts": {
        "webpack": "npx webpack",
        "webpack-dev-server": "webpack-dev-server --hot",
        "prod": "npm run webpack -- --env.mode production",
        "dev": "npm run webpack-dev-server -- --env.mode development --watch",
        "test": "npx jest",
        "code-coverage": "jest --coverage",
        "prettier": "npx prettier",
        "prettier:format": "npm run prettier -- --write src/**/*.ts",
        "prettier:check": "npm run prettier -- -c ./src/**/*.ts",
        "lint-check": "npx eslint ./src/**/*.ts",
        "code-style-check": "npm run lint-check && npm run pretty-check"
    },
    "author": "jkanchelov",
    "license": "MIT",
    "dependencies": {
        "core-js": "^3.6.5",
        "pixi.js": "^5.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.10.3",
        "@babel/plugin-proposal-class-properties": "^7.10.1",
        "@babel/plugin-proposal-decorators": "^7.10.3",
        "@babel/plugin-transform-runtime": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
        "@babel/preset-typescript": "^7.10.1",
        "@babel/runtime": "^7.10.3",
        "@types/jest": "^26.0.3",
        "babel-loader": "^8.1.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-register": "^6.26.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "html-webpack-plugin": "^4.3.0",
        "jest": "^25.5.4",
        "jest-canvas-mock": "^2.2.0",
        "jsdom": "^16.2.2",
        "prettier": "^2.0.5",
        "ts-jest": "^25.5.1",
        "ts-loader": "^7.0.5",
        "typescript": "^3.9.5",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleNameMapper": {
            ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
        },
        "setupFiles": [
            "jest-canvas-mock"
        ]
    }
}
